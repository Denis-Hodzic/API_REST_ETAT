<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SeriesMVVM.Views.SeriePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SeriesMVVM.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel>

        <!-- TITRE -->
        <TextBlock
                    x:Name="LblTitre"
                    Text="Titre"
                    Foreground="#EAEAEA"
                    FontSize="14"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    RelativePanel.AlignTopWithPanel="True"/>

        <TextBox
                    x:Name="TbTitre"
                    Height="34"
                    Width="460"
                    Text="{Binding Titre, Mode=TwoWay}"
                    Background="#2A2A2A"
                    BorderBrush="#3A3A3A"
                    Foreground="#FFFFFF"
                    CornerRadius="8"
                    RelativePanel.Below="LblTitre"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,8,0,0"/>

        <!-- RESUME -->
        <TextBlock
                    x:Name="LblResume"
                    Text="Resume"
                    Foreground="#EAEAEA"
                    FontSize="14"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Center"
                    RelativePanel.Below="TbTitre"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,16,0,0"/>

        <TextBox
                    x:Name="TbResume"
                    Height="120"
                    Width="460"
                    Text="{Binding Resume, Mode=TwoWay}"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    Background="#2A2A2A"
                    BorderBrush="#3A3A3A"
                    Foreground="#FFFFFF"
                    CornerRadius="10"
                    RelativePanel.Below="LblResume"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,8,0,0"/>

        <!-- NB SAISONS -->
        <TextBlock
                    x:Name="LblSaisons"
                    Text="Nb Saisons"
                    Foreground="#EAEAEA"
                    FontSize="13"
                    FontWeight="SemiBold"
                    RelativePanel.Below="TbResume"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,18,0,0"/>

        <TextBox
                    x:Name="TbSaisons"
                    Width="120"
                    Height="34"
                    Text="{Binding SerieToAdd.Nbsaisons,Mode=TwoWay}"
                    Background="#2A2A2A"
                    BorderBrush="#3A3A3A"
                    Foreground="#FFFFFF"
                    CornerRadius="8"
                    RelativePanel.Below="LblSaisons"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,6,0,0"/>

        <!-- NB EPISODES -->
        <TextBlock
                    x:Name="LblEpisodes"
                    Text="Nb Episodes"
                    Foreground="#EAEAEA"
                    FontSize="13"
                    FontWeight="SemiBold"
                    RelativePanel.Below="TbSaisons"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,12,0,0"/>

        <TextBox
                    x:Name="TbEpisodes"
                    Width="120"
                    Height="34"
                    Text="{Binding SerieToAdd.Nbepisodes,Mode=TwoWay}"
                    Background="#2A2A2A"
                    BorderBrush="#3A3A3A"
                    Foreground="#FFFFFF"
                    CornerRadius="8"
                    RelativePanel.Below="LblEpisodes"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,6,0,0"/>

        <!-- ANNEE CREATION -->
        <TextBlock
                    x:Name="LblAnnee"
                    Text="Annee creation"
                    Foreground="#EAEAEA"
                    FontSize="13"
                    FontWeight="SemiBold"
                    RelativePanel.Below="TbEpisodes"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,12,0,0"/>

        <TextBox
                    x:Name="TbAnnee"
                    Width="120"
                    Height="34"
                    Text="{Binding SerieToAdd.Anneecreation,Mode=TwoWay}"
                    Background="#2A2A2A"
                    BorderBrush="#3A3A3A"
                    Foreground="#FFFFFF"
                    CornerRadius="8"
                    RelativePanel.Below="LblAnnee"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,6,0,0"/>

        <!-- CHAINE -->
        <TextBlock
                    x:Name="LblChaine"
                    Text="Chaine"
                    Foreground="#EAEAEA"
                    FontSize="14"
                    FontWeight="SemiBold"
                    RelativePanel.Below="TbAnnee"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,18,0,0"/>

        <TextBox
                    x:Name="TbChaine"
                    Height="34"
                    Width="320"
                    Text="{Binding SerieToAdd.Network, Mode=TwoWay}"
                    Background="#2A2A2A"
                    BorderBrush="#3A3A3A"
                    Foreground="#FFFFFF"
                    CornerRadius="8"
                    RelativePanel.Below="LblChaine"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,8,0,0"/>

        <!-- BOUTON AJOUTER -->
        <Button
                    x:Name="BtnAjouter"
                    Content="Ajouter"
                    Width="220"
                    Height="38"
                    Background="#2A2A2A"
                    BorderBrush="#3A3A3A"
                    Foreground="#FFFFFF"
                    CornerRadius="10"
                    RelativePanel.Below="TbChaine"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    Margin="0,22,0,0"
                    Command="{Binding BtnSetAjout}"/>

    </RelativePanel>
</Page>
